<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_content"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/cardview_dark_background">


    <ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/ic_shop"
    android:id="@+id/imageView3"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:inputType="textPersonName"
        android:hint="Enter your Email"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:id="@+id/login_email_editext"
        android:layout_above="@+id/login_password_editext"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_password_editext"
        android:background="@android:color/white"
        android:textAlignment="center"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="232dp" />

    <Button
        android:text="Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:layout_marginTop="54dp"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignTop="@+id/login_password_editext"
         />


    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_with_google"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/login_with_google"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="23dp"
            android:gravity="center_horizontal">

        <TextView
            android:text="@string/signup_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/tw__composer_white"
            />

        <TextView
            android:id="@+id/login_signUp_editText"
            android:text="@string/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/tw__composer_white"
            android:layout_marginLeft="5dp"
            android:textStyle="normal|bold" />

     </LinearLayout>

    <TextView
        android:text="Forgot your password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_password_textview"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>